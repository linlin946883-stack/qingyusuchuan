# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=qingyusuchuan

# ==================== 服务器配置 ====================
PORT=3000
NODE_ENV=development

# 前端允许的来源（CORS）
CORS_ORIGIN=http://localhost:8000

# ==================== JWT配置 ====================
# 生成一个强密钥用于JWT签名
# 可以使用: openssl rand -base64 32
JWT_SECRET=your_very_secure_secret_key_please_change_this_in_production

# ==================== 敏感词配置 ====================
# 敏感词检查API（可选）
SENSITIVE_WORD_API=

# ==================== 支付配置 ====================
# 微信小程序配置
# 小程序 AppID（在小程序后台 -> 开发 -> 开发设置中获取）
WECHAT_APPID=wx1234567890abcdef

# 小程序 AppSecret（在小程序后台 -> 开发 -> 开发设置中获取）
WECHAT_APP_SECRET=your_app_secret_here

# 微信支付商户号（在微信商户平台 -> 账户中心 -> 商户信息中获取）
WECHAT_MCHID=1234567890

# 微信支付 API v3 密钥（在微信商户平台 -> 账户中心 -> API安全 -> 设置APIv3密钥）
# 注意：这个密钥是32位字符串，设置后需妥善保管
WECHAT_API_V3_KEY=your_32_character_api_v3_key_here

# 商户证书序列号（在微信商户平台 -> 账户中心 -> API安全中查看）
WECHAT_SERIAL_NO=your_certificate_serial_number

# 商户私钥文件路径（相对于 backend 目录）
# 证书文件在微信商户平台 -> 账户中心 -> API安全 -> 下载证书
WECHAT_PRIVATE_KEY_PATH=./config/apiclient_key.pem

# 商户证书文件路径（相对于 backend 目录）
WECHAT_PUBLIC_CERT_PATH=./config/apiclient_cert.pem

# 支付回调通知地址（必须是公网可访问的 HTTPS 地址）
WECHAT_NOTIFY_URL=https://your-domain.com/api/payment/notify

# 退款回调通知地址（必须是公网可访问的 HTTPS 地址）
WECHAT_REFUND_NOTIFY_URL=https://your-domain.com/api/payment/refund-notify

# ==================== 日志配置 ====================
LOG_LEVEL=info

# ==================== 缓存配置 ====================
# Redis配置（可选，用于缓存、session 和速率限制）
# 生产环境强烈推荐启用 Redis 用于速率限制
USE_REDIS=false
USE_REDIS_RATE_LIMIT=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== 其他配置 ====================
# 应用名称
APP_NAME=轻羽速传

# 应用版本
APP_VERSION=1.0.0
